<%- include('../partials/header.ejs') %>

	<h1>This is our user profile page</h1>

	<p>Content here</p>
	<% if (username !== false) { -%>
		<div>
			<p>
				Username: <%= user.username %>
			</p>
			<p>
				First name: <%= user.firstName %>
			</p>
			<p>
				Last name: <%= user.lastName %>
			</p>
			<p>
				Location: <%= user.location %>
			</p>
			<p>
				Email: <%= user.email %>
			</p>	
	</div>
	<a href="/users/<%= user._id %>/edit">EDIT Profile</a>

	<button data-toggle="modal" data-target="#delete-modal">DELETE OPTION</button>

   <% } else { %>
   	<div>
			<p>
				Username: <%= user.username %>
			</p>
			<p>
				First name: <%= user.firstName %>
			</p>
			<p>
				Last name: <%= user.lastName %>
			</p>
			<p>
				Location: <%= user.location %>
			</p>
			<p>
				Email: <%= user.email %>
			</p>	
		</div>
   <% } %>


		<!-- Delete modal -->
		<div id="delete-modal" class="modal fade" role="dialog">
			<div class="modal-sm">

				<!-- Delete modal content-->
				<div class="modal-content">
					<div class="modal-header">
						<button type="text" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title">Delete Options</h4>
					</div>
					<div class="modal-body">
						<form method="POST" action="/users/<%= user._id %>?_method=delete">
							<p>
								We're sad to see you go. Please choose what to remove:
							</p>
							<div>
								<label for="deleteRecipes">Recipes: </label>
								<input id="deleteRecipes" type="checkbox" name="deleteRecipes">
							</div>
							<div>
								<label for="deleteComments">Comments: </label>
								<input id="deleteComments" type="checkbox" name="deleteComments">
							</div>
							<div>
								<label for="deleteProfile">Profile: </label>
								<input id="deleteProfile" type="checkbox" name="deleteProfile">
								<small>(Remaining comments and recipes will show username as <i>Anonymous</i>)</small>			
					
							</div>
							<button>Delete</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</header>

<%- include('../partials/footer.ejs') %>