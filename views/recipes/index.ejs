<%- include('../partials/header.ejs') %>

	<h1>Recipe index page</h1>

	<div id="recipe-box-container">
		<% recipe.forEach((recipe)=> { %>
				<div class="recipe-box" onclick="window.location.href='/recipes/<%= recipe._id %>';">
					<p>
						Name: <%= recipe.name %>
					</p>
					<p>
						Category: <%= recipe.category %>
					</p>
					<p>
						Creator: <a href="/users/<%= recipe.creator.id %>"><%= recipe.creator.username %></a>
					</p>			
				</div>
		<% }) %>
	</div>


<%- include('../partials/footer.ejs') %>
