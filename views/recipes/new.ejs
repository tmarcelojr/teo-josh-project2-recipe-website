<%- include('../partials/header.ejs') %>

	<div class="new-container">
		<img id="new-recipe-banner" src="https://pearlbellevue.com/wp-content/uploads/2014/12/BANNER-FOOD.jpg">

		<hr>

	   <div class="col-lg-12 well">
	      <form method="POST" action="/recipes">
	        <div class="col-sm-12">                    
	          <div class="form-group ">
	            <label for="name"><strong>Name</strong></label>
	            <input id="name" name="name" type="text" placeholder="Enter name here..." class="form-control">
	            <label for="category"><strong>Category</strong></label>
	            <input id="category" name="category" type="text" placeholder="Enter category here..." class="form-control">
	          </div>
	          <div class="form-group">
	            <label for="imageUrl"><strong>Recipe picture</strong></label>
	            <input id="imageUrl" name="imageUrl" type="text" placeholder="Enter url here..." class="form-control">
	          </div>
	          <div class="form-group">
	            <label for="ingredients"><strong>Ingredients</strong><small> (Separate ingredients in each line)</small></i></label>
	            <textarea id="ingredients" name="ingredients" type="text" class="form-control" rows="7"></textarea>
	          </div>
	          <div class="form-group">
	            <label for="instructions">Instructions <i><small> (Separate instructions in new line)</small></i></label>
	            <textarea id="instructions" name="instructions" type="text" class="form-control" rows="7"> </textarea>
	          </div>
	          <button class="btn btn-lg btn-info">Share with Love</button>         
	        </div>
	      </form> 
	  </div>
	</div>

