<%- include('../partials/header.ejs') %>

	<div class="container">
	  <h2 class="well">Edit: <%= recipe.name %></h2>
	  <div class="col-lg-12 well">
	    <div class="row">
	      <form method="POST" action="/recipes/<%= recipe._id %>?_method=PUT">
	        <div class="col-sm-12">                    
	          <div class="form-group">
	            <label for="name">Name</label>
	            <input id="name" name="name" type="text" placeholder="Enter name here..." value="<%= recipe.name %>" class="form-control">
	          </div>    
	          <div class="form-group">
	            <label for="category">Category</label>
	            <input id="category" name="category" type="text" placeholder="Enter category here..." value="<%= recipe.category %>" class="form-control">
	          </div>
	          <div class="form-group">
	            <label for="imageUrl">Recipe Image URL</label>
	            <input id="imageUrl" name="imageUrl" type="text" placeholder="Enter url here..." value="<%= recipe.imageUrl %>" class="form-control">
	          </div>
	          <div class="form-group">
	            <label for="ingredients">Ingredients <i><small>(Separate ingredients with commas)</small></i></label>
	            <textarea id="ingredients" name="ingredients" type="text" class="form-control" row="3"><%= recipe.ingredients %></textarea>
	          </div>
	          <div class="form-group">
	            <label for="instructions">Instructions <i><small>(Separate instructions with commas)</small></i></label>
	            <textarea id="instructions" name="instructions" type="text" class="form-control" row="3"><%= recipe.instructions %></textarea>
	          </div>
	          <button class="btn btn-lg btn-info">Submit</button>         
	        </div>
	      </form> 
	    </div>
	  </div>
	</div>

<%- include('../partials/footer.ejs') %>

